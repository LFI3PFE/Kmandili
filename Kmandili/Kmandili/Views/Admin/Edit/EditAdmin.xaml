<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kmandili.Views.Admin.Edit.EditAdmin">
  <StackLayout BackgroundColor="White" VerticalOptions="FillAndExpand">
    <StackLayout HorizontalOptions="Center" Margin="0,30,0,0">
      <Label Text="Editer le mot de passe et le login de l'administrateur" FontSize="25" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
    </StackLayout>
    <StackLayout Spacing="40" Padding="30" VerticalOptions="CenterAndExpand">
      <Entry x:Name="Email" TextColor="Black" PlaceholderColor="Gray" Placeholder="Email" WidthRequest="150" FontSize="25" Keyboard="Email"/>
      <Entry x:Name="Password" TextColor="Black" PlaceholderColor="Gray" Placeholder="Mot de Passe" WidthRequest="150" FontSize="25" IsPassword="True"/>
    </StackLayout>
    <StackLayout VerticalOptions="End" Margin="10,0,10,30">
      <Button x:Name="JoinUsBt" BackgroundColor="#2b78c1" TextColor="#3b4552" Text="Modifier" FontAttributes="Bold" FontSize="30" Clicked="Update"/>
    </StackLayout>
  </StackLayout>
</ContentPage>