<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kmandili.Views.UserViews.Cart">
    <ScrollView>
        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout x:Name="EmptyCartLabel" Padding="0,30,0,0" VerticalOptions="Start" HorizontalOptions="FillAndExpand" IsVisible="False">
                <StackLayout>
                    <Label Text="(Chariot Vide)" FontSize="30" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="Center" />
                </StackLayout>
            </StackLayout>
            <StackLayout x:Name="MainLayout"></StackLayout>
            <StackLayout x:Name="CartTotalStackLayout" HorizontalOptions="End" Padding="0,0,10,0" Orientation="Horizontal">
                <Label Text="Total:" FontSize="30" TextColor="Black"/>
                <Label x:Name="CartTotal" Text="" FontSize="30" TextColor="Black"/>
                <Label Text="TND" FontSize="20" TextColor="Gray"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>