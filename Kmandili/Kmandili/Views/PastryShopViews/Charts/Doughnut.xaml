<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kmandili.Views.PastryShopViews.Charts.Doughnut">
  <StackLayout Spacing="0" BackgroundColor="White">
    <StackLayout x:Name="LoadingLayout" VerticalOptions="CenterAndExpand">
      <ActivityIndicator x:Name="Loading" VerticalOptions="CenterAndExpand" Color="#3b4552" HeightRequest="50"/>
    </StackLayout>
    <StackLayout Spacing="0" x:Name="BodyLayout" VerticalOptions="FillAndExpand" IsVisible="False">
      <StackLayout Padding="0,25,0,0" Margin="0" Spacing="0" VerticalOptions="Center" BackgroundColor="White">
        <Label Text="Les cinq produits les plus commandés" FontSize="25" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center"/>
      </StackLayout>
      <StackLayout Padding="0,20,0,30" Margin="0" Spacing="0" x:Name="BrowserLayout" VerticalOptions="FillAndExpand">
        <WebView x:Name="Browser" VerticalOptions="FillAndExpand"></WebView>
      </StackLayout>
      <StackLayout VerticalOptions="End" HorizontalOptions="End" Padding="0,0,10,20" Orientation="Horizontal" Spacing="5">
        <Label Text="cde." TextColor="Black" FontSize="15"/>
        <Label Text="= Commande" TextColor="Black" FontSize="15"/>
      </StackLayout>
    </StackLayout>
  </StackLayout>
</ContentPage>